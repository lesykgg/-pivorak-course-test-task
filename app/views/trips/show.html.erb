<table class="table table-bordered">
  <thead>
    <tr>
      <th>Station</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @trip.destinations.each do |dest| %>
      <tr>
      <td><%=dest.point %></td>
      <td><%=dest.datearr%></td>
      <td><%=dest.station_arrival_time%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.try(:admin?) %>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<% end %>
<%= link_to 'Back', trips_path %>
