<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Destination</th>
      <th>Timedep</th>
      <th>Timearr</th>
      <th>Via</th>
      <th>Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.from %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.timedep %></td>
        <td><%= trip.timearr %></td>
        <td><%= trip.via %></td>
        <td><%= trip.seats %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

